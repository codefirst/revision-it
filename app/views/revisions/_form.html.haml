= form_for @revision do |f|
  - if @revision.errors.any?
    #error_explanation
      %h2= "#{pluralize(@revision.errors.count, "error")} prohibited this revision from being saved:"
      %ul
        - @revision.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :hash_code
    = f.text_field :hash_code
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :log
    = f.text_area :log
  .actions
    = f.submit 'Save'
