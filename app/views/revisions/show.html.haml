%h2="commit #{@revision.hash_code[0,6]}"
%dl
  %dt Log
  %dd=@revision.log
  %dt Author
  %dd=@revision.author
  %dt Date
  %dd=@revision.date
  %dt Project
  %dd=@revision.project
  %dt Source
  %dd=@revision.source
  %dt Permlink
  %dd=link_to_url @revision.url
%h3 Embed
%dl
  %dt embed HTML
  %dd=link_to_url(hash_path(hash: @revision.hash_code, only_path: false))
  %dt Get information by JSON
  %dd=link_to_url(hash_path(hash: @revision.hash_code, format: 'json', only_path: false))
